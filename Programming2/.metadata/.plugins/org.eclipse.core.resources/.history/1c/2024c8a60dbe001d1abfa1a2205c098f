public class bottomRight {

	public static void main(String[] args) {
		

		bottomRight(3);
		
	}
	
	
	public static void bottomRight(int num) {
		
		int counter2 = 0;
		
		for(int i = 0; i < num; i++) {
			
			int counter = 0;
			
			
			for(int b = 1; b < num - i; b++) {
				//int counter = 0 ;
				System.out.print(" ");
				counter++;
				//System.out.print(counter);
				
			//if(i > 1 && (counter + i + 1) == num) {
				//System.out.print("*");
				
			//}
			
			
			}
			
	
			for(int x = 1; x < i; x++) {
				System.out.print("*");
				
				
			}
			
			
			System.out.println("*");
			//counter++;
			counter2++;
			System.out.print(counter2);	
}
	
		

		
		
		
	}
	
	

}





